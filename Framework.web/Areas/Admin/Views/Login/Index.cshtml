@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD *XHTML 1.0* Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--主题样式：可选-->
    @*<link href="~/Content/themes/black/easyui.css" rel="stylesheet" />*@
    <link href="~/Content/themes/bootstrap/easyui.css" rel="stylesheet" />
    @*<link href="~/Content/themes/ui-pepper-grinder/easyui.css" rel="stylesheet" />*@
    @*<link href="~/Content/themes/ui-cupertino/easyui.css" rel="stylesheet" />*@
    <!--这个是粒子效果的插件
    <script src="~/scripts/login-back/canvas-particle.js"></script>
    -->
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <link href="~/Content/themes/color.css" rel="stylesheet" />
    <link href="~/Content/themes/mobile.css" rel="stylesheet" />
    @*<link href="~/Content/themes/ui-sunny/easyui.css" rel="stylesheet" />*@

    <!--这是现在用的背景的样式-->
    <link href="~/scripts/login-back/normalize.css" rel="stylesheet" />
    <link href="~/scripts/login-back/component.css" rel="stylesheet" />

    <script src="~/scripts/jquery-1.11.3.min.js"></script>
    <script src="~/scripts/login-back/TweenLite.min.js"></script>
    <script src="~/scripts/login-back/EasePack.min.js"></script>
    <script src="~/scripts/login-back/backuse.js"></script>
    <script src="~/scripts/jquery.easyui-1.4.5.min.js"></script>
    <script src="~/scripts/lib/modules.manager.js"></script>
    <script src="~/scripts/lib/emuns.module.js"></script>
    <script src="~/scripts/lib/tool.module.js"></script>
    <script src="~/scripts/lib/func.module.js"></script>
    <script src="~/scripts/lib/easyui.module.js"></script>
    <script src="~/Areas/Admin/Scripts/Login/Index.js"></script>

    <!--[if IE]>
    <script src="~/scripts/login-back/html5.js"></script>
    <![endif]-->

    <style type="text/css">
        .title {
            color: white;
            width: 100px;
            text-align: right;
        }

        .tdcontent {
            vertical-align: central;
            padding-left: 5px;
        }

        table {
            border-collapse: separate;
            border-spacing: 10px;
        }

        .vcode {
            top: 5px;
        }
        /*html {
            background-image: url('../../../../scripts/login-back/thestart.jpg');
            background-size: cover;
            background-color: black;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
        }*/
    </style>
    @* 这是粒子效果的初始化
        <script type="text/javascript">
                window.onload = function () {
                    var config = {
                        vx: 10,
                        vy: 10,
                        height: 2,
                        width: 2,
                        count: 30,
                        color: "255, 255, 255",
                        stroke: "255,255,255",
                        dist: 8000,
                        e_dist: 20000,
                        max_conn: 40
                    }
                    CanvasParticle(config);
                }
            </script>*@
    <title>登录</title>
</head>
<body>
    <div class="container demo-1">
        <div class="content">
            <div id="large-header" class="large-header">
                <canvas id="canvas_container"></canvas>
                <div id="lg_panel" class="easyui-panel"
                     style="width:450px;height:250px;padding:10px;background-color:rgba(255,255,255,0.0);border:0px"
                     data-options="closable:false,collapsible:false,minimizable:false,maximizable:false,style:{position:'absolute'}">
                    <form id="lg_form" action="/Admin/Login/Login" method="post">
                        <table style="width:100%;">
                            <tbody>
                                <tr>
                                    <td class="title">登录名：</td>
                                    <td class="tdcontent">
                                        <input id="uname" class="easyui-textbox"
                                               data-options="height:25,width:180,required:true,missingMessage:'请输入登录名',iconCls:'icon-man',iconAlign:'left',type:'text',value:'请输入登录名',value:'admin',validType:['chartLengthBetween[3,12,\'账号\']','isHtmlValidate']" />
                                        &emsp;<input type="checkbox" id="remember_ac_info"><span style="color:white">记住登录信息</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="title">密  码：</td>
                                    <td class="tdcontent">
                                        <input id="upwd" class="easyui-textbox" data-options="height:25,width:180,required:true,missingMessage:'请输入登录密码',iconCls:'icon-lock',iconAlign:'left',type:'password',value:'123',validType:['chartLengthBetween[3,15,\'密码\']','isHtmlValidate']" />
                                        &emsp;<a style="color:white" href="javascript:;" id="forget_psd">忘记密码？</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="title">验证码：</td>
                                    <td class="tdcontent">
                                        <img id="vcodepic" style="vertical-align: middle;border-radius:4px;width:85px;height:23px" />
                                        <input id="vcode" class="easyui-textbox" data-options="height:25,width:90,required:true,missingMessage:'请输入4位验证码',type:'text',value:'请输入验证码',validType:['chartLengthEquire[4,\'验证码\']','isHtmlValidate']" />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="padding-left:117px;vertical-align:bottom">
                                        <a id="btn_reset" href="javascript:;" class="easyui-linkbutton" data-options="width:88">重置</a>
                                        <a id="btn_lgon" href="javascript:;" class="easyui-linkbutton" data-options="width:88">登录</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
