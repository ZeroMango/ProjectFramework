<body>
    <div id="layout" class="easyui-layout" data-options="fit:true">
        <!--上布局-->
        <div data-options="region:'north',title:'',split:false" style="height:100px;position:relative">
            <div style="width:200px;height:20px;right:0px;position:absolute;right:0px;bottom:0px">
                当前登录用户：@Model.sUserName <a href="/Admin/Main/ExitSystem">安全退出</a>
